@{
    ViewData["Title"] = "Home page";
}
@model her_care.Models.Demographics

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width-device-width"/>
        <title>Intake</title>
        <link rel="site" href="~/css/site.css" /> 
    </head>
    <body>
